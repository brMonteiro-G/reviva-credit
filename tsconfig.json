{
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@/components/*": [
          "components/*"
        ],
        "@/contexts/*": [
          "contexts/"
        ],
        "@/state/*": [
          "hooks/"
        ],
        "@/templates/*": [
          "templates/"
        ],
        "@/services/*": [
          "services/"
        ],
        "@/pages/*": [
          "pages/"
        ],
        "@/tests/*": [
          "tests/"
        ],
        "@/hooks/*": [
          "hooks/"
        ],
      },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
